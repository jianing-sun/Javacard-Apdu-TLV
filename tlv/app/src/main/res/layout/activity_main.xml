<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jianingsun.tlv.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valid APDU example: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="80 E2 00 00 13 1002 10 01 23 45 67 89 AB CD EF FE DC BA 98 76 54 32 10"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invalid APDU example: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="80 E2 00 00 10 1002 10 01 23 45 67 89 AB CD EF FE DC BA 98 76 54 32 10"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/apdu_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/apduValidity"
        android:maxLines="2" />

    <Button
        android:id="@+id/confirmCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Target Byte Stream: "
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="80 E2 00 00 0A af 82 11 db db d9 08 12 9b d8"
        android:textSize="18sp" />

    <Button
        android:id="@+id/getData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Data Stream"/>

    <EditText
        android:id="@+id/dataStream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/dataStream" />

    <Button
    android:id="@+id/decrypt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Decrypt Data"/>

    <EditText
        android:id="@+id/decryptedData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/decryptData" />

    <Button
        android:id="@+id/movetoTLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="GO TO TLV PARSING"
        android:layout_marginTop="35dp"/>

</LinearLayout>
