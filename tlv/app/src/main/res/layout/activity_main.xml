<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp"
    tools:context="com.jianingsun.tlv.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/validHint"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/validExample"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invalidExample"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invalidExample"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/apdu_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/apduValidity"
        android:maxLines="2"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/confirmCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkAndProcess"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/targetByteStream"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/defaultDataStream"
        android:textSize="16sp" />

    <Button
        android:id="@+id/getData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/getDataHint"/>

    <EditText
        android:id="@+id/dataStream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/dataStream" />

    <Button
        android:id="@+id/decrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/decryptedHint" />

    <Button
        android:id="@+id/encrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/encryptedHint" />

    <EditText
        android:id="@+id/decryptedData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/decryptData" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:context="com.jianingsun.tlv.MainActivity">

        <Button
            android:id="@+id/parse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tlvParseHint" />

        <Button
            android:id="@+id/ascii"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/asciiHint" />

    </LinearLayout>

    <TextView
        android:id="@+id/parsedData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/finalDisplay"/>

</LinearLayout>

